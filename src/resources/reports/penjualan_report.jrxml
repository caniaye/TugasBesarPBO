<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="penjualan_report"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <parameter name="judul" class="java.lang.String"/>

    <!-- QUERY JOIN SESUAI DATABASE -->
    <queryString>
        <![CDATA[
            SELECT
                p.id,
                m.merk,
                m.model,
                p.jumlah,
                p.harga_total,
                p.pembeli_nama,
                p.tanggal_jual
            FROM penjualan p
            JOIN mobil m ON p.mobil_id = m.id
        ]]>
    </queryString>

    <!-- FIELD -->
    <field name="id" class="java.lang.Integer"/>
    <field name="merk" class="java.lang.String"/>
    <field name="model" class="java.lang.String"/>
    <field name="jumlah" class="java.lang.Integer"/>
    <field name="harga_total" class="java.lang.Double"/>
    <field name="pembeli_nama" class="java.lang.String"/>
    <field name="tanggal_jual" class="java.sql.Date"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="5" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{judul}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- HEADER -->
    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0" y="0" width="40" height="20"/><text><![CDATA[ID]]></text></staticText>
            <staticText><reportElement x="40" y="0" width="90" height="20"/><text><![CDATA[Mobil]]></text></staticText>
            <staticText><reportElement x="130" y="0" width="60" height="20"/><text><![CDATA[Jumlah]]></text></staticText>
            <staticText><reportElement x="190" y="0" width="100" height="20"/><text><![CDATA[Total]]></text></staticText>
            <staticText><reportElement x="290" y="0" width="130" height="20"/><text><![CDATA[Pembeli]]></text></staticText>
            <staticText><reportElement x="420" y="0" width="135" height="20"/><text><![CDATA[Tanggal]]></text></staticText>
        </band>
    </columnHeader>

    <!-- DETAIL -->
    <detail>
        <band height="20">
            <textField><reportElement x="0" y="0" width="40" height="20"/><textFieldExpression><![CDATA[$F{id}]]></textFieldExpression></textField>
            <textField><reportElement x="40" y="0" width="90" height="20"/><textFieldExpression><![CDATA[$F{merk} + " " + $F{model}]]></textFieldExpression></textField>
            <textField><reportElement x="130" y="0" width="60" height="20"/><textFieldExpression><![CDATA[$F{jumlah}]]></textFieldExpression></textField>
            <textField><reportElement x="190" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{harga_total}]]></textFieldExpression></textField>
            <textField><reportElement x="290" y="0" width="130" height="20"/><textFieldExpression><![CDATA[$F{pembeli_nama}]]></textFieldExpression></textField>
            <textField><reportElement x="420" y="0" width="135" height="20"/><textFieldExpression><![CDATA[$F{tanggal_jual}]]></textFieldExpression></textField>
        </band>
    </detail>

</jasperReport>
